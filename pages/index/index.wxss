/**index.wxss**/

#index {
  height: 100vh;
  background: #f5f5f5;
}

.indexTop {
  background: #fff;
  padding: 20rpx;
}

.indexTopAddr {
  height: 50rpx;
  line-height: 50rpx;
  float: left;
}

.indexAddrIcon {
  width: 50rpx;
  height: 50rpx;
  float: left;
}

.indexAddrText {
  margin-left: 10rpx;
  font-weight: bold;
  float: left;
}

.indexTopScan {
  float: right;
}

.indexTopScan > image {
  width: 50rpx;
  height: 50rpx;
}

.indexTopScan1 {
  margin-right: 30rpx;
}

.indexTopSearch {
  height: 60rpx;
  border: 2rpx solid #99e5e4;
  border-radius: 30rpx;
  margin-top: 10rpx;
  box-shadow: 0px 2rpx 2rpx rgba(153, 229, 228, 0.3);
  position: relative;
}

.indexTopSearchIpt {
  height: 60rpx;
  width: 100%;
  position: absolute;
  padding: 0 120rpx 0 20rpx;
  box-sizing: border-box;
}

.indexTopSearchIcon {
  width: 110rpx;
  height: 64rpx;
  background: #09aefe;
  border-radius: 30rpx;
  float: right;
  margin-right: -2rpx;
  margin-top: -2rpx;
  text-align: center;
}

.indexTopSearchIcon >image {
  width: 44rpx;
  height: 44rpx;
  margin-top: 8rpx;
}

.indexTopSearchIptH {
  color: #b1b1b1;
}

.indexNav {
  padding: 20rpx;
}

.indexNavItem {
  width: 20%;
  float: left;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #2a2a2a;
}

.indexNavItemIcon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #93D8FA;
}

.indexNavItemText {
  margin-top: 10rpx;
}
